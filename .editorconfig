root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

[*.{js,jsx,ts,tsx}]
quote_type = single
max_line_length = 120

[*.json]
indent_size = 2
quote_type = double
insert_final_newline = false

[*.md]
trim_trailing_whitespace = false
insert_final_newline = true

[*.yml]
indent_style = space
indent_size = 2

[*.sh]
end_of_line = lf
insert_final_newline = true
